{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "lib": ["esnext", "dom"],
  "include": ["src/**/*", "**/*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
